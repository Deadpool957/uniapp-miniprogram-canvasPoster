.listWrap {
  height: calc(100vh - 140rpx);
  padding: 20rpx 0;
  font-size: 32rpx;
  color: #666;
}
.listWrap .goodsItem {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-wrap: nowrap;
        -ms-flex-wrap: nowrap;
            flex-wrap: nowrap;
    margin: 10rpx 20rpx;
    -webkit-box-shadow: 0 0rpx 20rpx -5rpx #999;
            box-shadow: 0 0rpx 20rpx -5rpx #999;
}
.listWrap .goodsItem .imgBox {
      position: relative;
      width: 300rpx;
      max-height: 300rpx;
      overflow: hidden;
}
.listWrap .goodsItem .imgBox image {
        width: 100%;
        max-height: 100%;
}
.listWrap .goodsItem .imgBox .chooseFlag {
        position: absolute;
        top: 10rpx;
        left: -70rpx;
        width: 200rpx;
        text-align: center;
        -webkit-transform: rotate(-45deg);
            -ms-transform: rotate(-45deg);
                transform: rotate(-45deg);
        color: #fff;
        background: #007AFF;
}
.listWrap .goodsItem .goodsInfo {
      width: 45%;
      padding: 20rpx;
      line-height: 80rpx;
}
.listWrap .goodsItem .goodsInfo .goddsName {
        font-size: 40rpx;
        font-weight: bold;
}
.listWrap .goodsItem .goodsInfo .sale {
        color: #999;
        text-decoration: line-through;
}
.listWrap .goodsItem .goodsInfo .nowSale .heightLight {
        color: #ff7800;
}
.listWrap .goodsItem .goodsInfo .nowSale .textBig {
        font-size: 40rpx;
}
.listWrap .goodsItem .chooseBtn {
      width: 25%;
      line-height: 300rpx;
      font-size: 40rpx;
      text-align: center;
      color: #fff;
      background: #10bb20;
}
.listWrap .goodsItem .chooseBtn:active {
        background: #009900;
}
.shareBtnList {
  height: 60rpx;
  padding: 20rpx;
  border-top: 1px solid #eee;
  text-align: center;
}
.sharePlaneWrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
}
.sharePlaneWrap .sharePlane {
    width: 600rpx;
    height: 450rpx;
    padding: 40rpx;
    margin: 0 auto;
    margin-top: calc(50vh - 200rpx);
    border-radius: 50rpx;
    background: #F8F8F8;
}
.sharePlaneWrap .sharePlane .top {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-flex-wrap: nowrap;
          -ms-flex-wrap: nowrap;
              flex-wrap: nowrap;
}
.sharePlaneWrap .sharePlane .top > button {
        width: 50%;
        padding: 20rpx;
        border: none !important;
        text-align: center;
}
.sharePlaneWrap .sharePlane .top > button image {
          width: 60%;
}
.sharePlaneWrap .sharePlane .top > button:active {
          background: #eee;
}
.sharePlaneWrap .sharePlane .top > button::after {
          border: none;
}
.posterPreview {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  padding-top: 100rpx;
  z-index: 9;
  text-align: center;
  background: rgba(0, 0, 0, 0.8);
}
.posterPreview image {
    width: 80%;
}
.posterPreview button {
    width: 80%;
    position: absolute;
    bottom: 55px;
    left: 10%;
}
