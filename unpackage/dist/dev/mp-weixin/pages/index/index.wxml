<view class="content"><view class="canvas-box"><canvas style="width:300px;height:240px;" canvas-id="shareFriend"></canvas></view><scroll-view class="listWrap" scroll-y="{{true}}"><block wx:for="{{goodsList}}" wx:for-item="goods" wx:for-index="index" wx:key="index"><view class="goodsItem"><view class="imgBox"><view hidden="{{!(nowSelect==index)}}" class="chooseFlag">√</view><image src="{{goods.pic}}" mode="widthFix"></image></view><view class="goodsInfo"><view class="goddsName">{{''+goods.name+''}}</view><view class="sale">{{'原价：￥'+goods.sale+''}}</view><view class="nowSale">现在只售：<text class="heightLight">￥</text><text class="heightLight textBig">{{goods.nowSale}}</text></view></view><view data-event-opts="{{[['tap',[['chooseGoods',[index]]]]]}}" class="chooseBtn" bindtap="__e">选择</view></view></block></scroll-view><view class="shareBtnList"><button type="primary" size="mini" data-event-opts="{{[['tap',[['openPanle',['$event']]]]]}}" bindtap="__e">点击分享</button></view><block wx:if="{{sharePlaneStatus}}"><view data-event-opts="{{[['tap',[['closePanle',['$event']]]]]}}" class="sharePlaneWrap" bindtap="__e"><view data-event-opts="{{[['tap',[['',['$event']]]]]}}" class="sharePlane" catchtap="__e"><view class="top"><button class="leftGoods" open-type="share"><image src="../../static/wechat-icon.png" mode="widthFix"></image><view>分享链接</view></button><button data-event-opts="{{[['tap',[['sharePoster',['$event']]]]]}}" class="rightPoster" bindtap="__e"><image src="../../static/poster-icon.png" mode="widthFix"></image><view>分享海报</view></button></view><view class="btm"><button type="default" data-event-opts="{{[['tap',[['closePanle',['$event']]]]]}}" bindtap="__e">取消</button></view></view></view></block><block wx:if="{{posterStatus}}"><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="posterPreview" bindtap="__e"><image src="{{picTempUrl}}" mode="widthFix"></image><button type="default" data-event-opts="{{[['tap',[['getPhotosAlbumAuth',['$event']]]]]}}" catchtap="